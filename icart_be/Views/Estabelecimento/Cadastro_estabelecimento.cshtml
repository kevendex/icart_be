@model icart_be.Models.Usuario
@{
    ViewData["Title"] = "Cadastro estabelecimento";
}

<head>
    <link rel="stylesheet" href="~/css/cadastro-perfil.css">
    <link rel="stylesheet" href="~/css/index.css">
    <style>
        footer {
            position: fixed;
            bottom: 0;
            left: 0;
        }
    </style>
</head>
