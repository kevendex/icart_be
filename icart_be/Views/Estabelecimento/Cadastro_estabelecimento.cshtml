            <div id="container-lacuna"><input type="text" name="municipio-e" id="lacuna" placeholder="Municipio:" minlength="1" maxlength="35"></div>
        </div>
        <br>
        <br>
        <br>
        <div id="container-linhas-lacunas">
            <div id="container-lacuna"><input type="text" name="uf-e" id="lacuna" placeholder="UF:" minlength="2" maxlength="2"></div>
