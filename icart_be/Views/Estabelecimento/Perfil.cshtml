@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@{
    icart_be.Models.Estabelecimento e = JsonConvert.DeserializeObject<icart_be.Models.Estabelecimento>
        (Context.Session.GetString("user").ToString());
}
@{
    ViewData["Title"] = "Perfil";
}

<head>
    <link rel="stylesheet" href="~/css/perfil.css">
    <link rel="stylesheet" href="~/css/index.css">
    <style>
        header {
            width: 100%;
            height: 70px;
            background-color: #A5CF20;
            display: flex;
            align-items: center;
            justify-content: center;
            position: fixed;
            margin-top: -150px;
        }
        footer {
            position: fixed;
            bottom: 0;
            left: 0;
        }
    </style>
</head>
<main>
    <div class="dados">
        <p>Nome da Empresa:</p>
        <p>@e.Nome_fantasia</p>
    </div>
    <div class="dados">
        <p>CNPJ:</p>
        <p>@e.Cnpj</p>
    </div>
    <div class="dados">
        <p>CEP:</p>
        <p>@e.Cep</p>
    </div>
    <div class="dados">
        <p>Telefone:</p>
        <p>@e.Telefone</p>
    </div>
    <div class="dados">
        <p>Email:</p>
        <p>@e.Email</p>
    </div>
    <div class="container-button">
        <a href="~/Estabelecimento/Alterar">
            <button>Alterar Dados</button>
        </a>
    </div>
    <div class="container-button">
        <a href="~/Estabelecimento/Sair">
            <button>Sair</button>
        </a>
    </div>
</main>